<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantCompanion.ProfileDetails"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout >

            <!-- Header -->
            <Grid BackgroundColor="#FF8A80" HeightRequest="180">
                <!-- Moldura circular para a imagem -->
                <Frame WidthRequest="120" HeightRequest="120"
                       BackgroundColor="White"
                       CornerRadius="60"
                       Padding="0"
                       HasShadow="True"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       Margin="0,0,0,-15">
                    <Grid>
                        <!-- Imagem de perfil -->
                        <Image x:Name="profileImage"
                               Source="profile_placeholder.png"
                               WidthRequest="120"
                               HeightRequest="120"
                               Aspect="AspectFill"/>

                        <!-- Ícone da câmera no centro -->
                        <ImageButton Source="cam_icon.png"
                                     WidthRequest="50"
                                     HeightRequest="50"
                                     BackgroundColor="Transparent"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     />
                    </Grid>
                </Frame>
            </Grid>

            <Label Text="Mudar Imagem de Perfil" 
                   HorizontalOptions="Center"
                   FontSize="14"
                   Margin="5"/>

            <!-- Campos de Entrada (Estilizados) -->
            <StackLayout WidthRequest="300" HorizontalOptions="Center">

                <Frame CornerRadius="25" Padding="10" HasShadow="False" BorderColor="LightGray">
                    <Entry x:Name="entryName"
                           Placeholder="Nome Utilizador"
                           FontSize="14"/>
                </Frame>

                <Frame CornerRadius="25" Padding="10" HasShadow="False" BorderColor="LightGray">
                    <Entry x:Name="entryEmail"
                           Placeholder="E-mail"
                           FontSize="14"
                           Keyboard="Email"/>
                </Frame>

                <Frame CornerRadius="25" Padding="10" HasShadow="False" BorderColor="LightGray">
                    <Entry x:Name="entryPhone"
                           Placeholder="Número de Telemóvel"
                           FontSize="14"
                           Keyboard="Telephone"/>
                </Frame>

                <Frame CornerRadius="25" Padding="10" HasShadow="False" BorderColor="LightGray">
                    <Entry x:Name="entryPassword"
                           Placeholder="Password"
                           FontSize="14"
                           IsPassword="True"/>
                </Frame>

                <Frame CornerRadius="25" Padding="10" HasShadow="False" BorderColor="LightGray">
                    <Entry x:Name="entryConfirmPassword"
                           Placeholder="Confirmar Password"
                           FontSize="14"
                           IsPassword="True"/>
                </Frame>
            </StackLayout>

            <!-- Botão de Atualizar Perfil -->
            <Button Text="Atualizar Perfil"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    
                    Margin="20"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
