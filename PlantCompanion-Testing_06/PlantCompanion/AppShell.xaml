<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlantCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PlantCompanion"
    Shell.FlyoutBehavior="Flyout"
    Title="PlantCompanion">

    <FlyoutItem Title="Home" Icon="home.svg">
        <ShellContent Title="" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Tempo" Icon="tempo.psvg">
        <ShellContent Title="" ContentTemplate="{DataTemplate local:TempoPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Perfil" Icon="perfil.svg">
        <ShellContent Title="" ContentTemplate="{DataTemplate local:PerfilPage}" />
    </FlyoutItem>

</Shell>